<div class="parent color">  
  <div class="form">
    <img class="form-back" src="/images/form.png" alt="">
  </div>
  
  <div class="text">
    <h1>Welcome to CodeScape!</h1>
    <p>Already a user? <a href="/login">Log In</a></p>
  </div>

  <div class="form-box position">
    <div>
      <img src="images/logo-dark.png" alt="CodeScape logo">
    </div>
    <br>
    <form class="parent" method="POST" action="/signup">
      <div>
        <input type="text" name="username" placeholder="Username">
      </div>
      <br>
      <div>
        <input type="text" name="email" placeholder="Email">
      </div>
      <br>
      <div>
        <input type="password" name="password" placeholder="Password" >
      </div>
      <div>
        <button class="button" type="submit">Sign Up</button>
      </div>
    </form>
  </div>
  {{#if error}}
  <p class="error position">{{error}}</p>
  {{/if}}
  <div class="credits">Built by Kalande and Lily</div>
</div>



