<section class="home-page">
  <nav class="discover-nav">
    <div class="user-info">
      <div class="user-image-wrapper">
        <img src="{{user.imageUrl}}" alt="user-pic">
      </div>
      <a href="/myprofile" class="user-link">{{user.username}}</a>
      
    </div>
    <div class="snippet-search-bar">
      <form class="search-snippet-form" method="GET" action="/home">
        <input type="text" name="search" placeholder="Search snippets">
        <button id="search-snippet-button" type="submit"><i class="fas fa-search"></i></button>
      </form>
      <form class="search-snippet-form" action="/home">
        <button id="clear-snippet-search-btn" type="submit">Clear</button>
      </form>

    </div>
    
    <div class="logo-wrapper"> 
      <p>Logout</p> 
      <a href="/logout"><img src="/images/exit_PNG48.png" width="30px" height="30px"  alt="Logout"></a>
    </div>
  </nav>
  <div class="nav-placeholder"> </div>
  <div class="home-wrapper layout-for-sidebar">
    <div class="sidebar">
      <div class="my-snippets selected"><a href="/home">My snippets</a></div>
      <div class="find-friends"><a href="/find-friends">Find friends</a></div>
      <div class="discover "><a href="/discover">Discover</a></div>
      <div class="resources"><a href="/resources"> Resources</a></div>
    </div>
    {{!-- Main content starts here --}}
    <div class="main-content-home">
      <div class="create-snippet-form">
        <form method="POST" action="/home">
          <div class="form-group">
            <label  for="editor">New snippet</label>
            <input type="text" name="title" placeholder="Title">
            <button class="btn btn-primary" type="submit">Create</button>
            {{#if error}}
            <p class="error">{{error}}</p>
            {{/if}}
            <textarea type="text" name="content" class="form-control" id="editor"></textarea>
          </div>

        </form>
      </div>
      <div class="snippets-wrapper">      
        {{#if searcherr}}
            <p class="error">{{searcherr}}</p>
        {{/if}}
        <ol>
          {{#each user.posts}}
          <li class="line-numbers">
            <label class="snippet-title" for="snippet">{{this.title}} </label>
            <pre> <code class="language-javascript" id="snippet">{{this.content}}</code> </pre>
          </li>
          <form action="/home/{{this._id}}/delete">
            <button class="btn btn-primary" type="submit">DELETE</button>
          </form>
          <form action="/home/{{this._id}}/edit">
            <button class="btn btn-primary" type="submit">EDIT</button>
          </form>
          {{/each}}
        </ol>
        <ol>
          {{#each posts}}
          <li class="line-numbers">
            <label for="snippet">{{this.title}}</label>
            <pre> <code class="language-javascript" id="snippet">{{this.content}}</code> </pre>
          </li>
          <form action="/home/{{this._id}}/delete">
            <button class="btn btn-primary" type="submit">DELETE</button>
          </form>

          <form action="/home/{{this._id}}/edit">
            <button class="btn btn-primary" type="submit">EDIT</button>
          </form>

          {{/each}}
        </ol>
      </div>
    </div>

    <script src="/js/prism.js"></script>

</section>